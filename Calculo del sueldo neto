
#include <iostream>
#include "conio.h"
//declara constantes 
#define MAX 100
#define AFP 0.121
#define IVA 0.13
using namespace std;
void main()
{    
	int N;
	float salarioneto, salariobruto;
	//VALIDAR
	do{
	cout<<"ingrese el numero de empleados";
	cin>>N;
	}while((N>MAX)||(N<0));
	for(int i=0; i<N; i++)
	{
		if(salariobruto>(2*1850))
		
			salarioneto=salariobruto-salariobruto*(IVA+AFP);
		else

		    {salarioneto=salarioneto-salariobruto*(AFP);
		cout<<"su salario neto es :  "<<salarioneto;}
	}

	
getch();
}
